@model UserCreationViewModel

@{
    ViewData["Title"] = "Create User";
}

<h2>Create User</h2>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-xs-12 col-md-5 form-group">
            @Html.DisplayNameFor(model => model.EmailAddress)
            @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EmailAddress)
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-md-5 form-group">
            @Html.DisplayNameFor(model => model.UnencryptedPassword)
            @Html.EditorFor(model => model.UnencryptedPassword, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UnencryptedPassword)
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-md-5 form-group">
            <input type="submit" class="btn btn-success" value="Create User" />
        </div>
    </div>
}
